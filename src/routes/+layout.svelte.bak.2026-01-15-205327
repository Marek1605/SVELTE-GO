<script>
    import { page } from '$app/stores';
    import { api } from '$lib/api';
    import { onMount } from 'svelte';
    import '../app.css';
    
    let searchQuery = '';
    let isScrolled = false;
    let isCollapsed = false;
    let wishlistCount = 0;
    let compareCount = 0;
    let navCategories = [];
    let mobileMenuOpen = false;
    let mobileSearchOpen = false;

    function handleSearch(e) {
        e.preventDefault();
        if (searchQuery.trim()) {
            window.location.href = `/hladat?q=${encodeURIComponent(searchQuery)}`;
        }

    function toggleMobileSearch() {
        mobileSearchOpen = !mobileSearchOpen;
        if (mobileSearchOpen) {
            mobileMenuOpen = false;
            document.body.style.overflow = '';
        }
    }
        mobileSearchOpen = false;
    }
    
    function toggleMobileMenu() {
        mobileMenuOpen = !mobileMenuOpen;
        if (mobileMenuOpen) {
            document.body.style.overflow = 'hidden';
        } else {
            document.body.style.overflow = '';
        }
    }
    
    function closeMobileMenu() {
        mobileMenuOpen = false;
        document.body.style.overflow = '';
    }
    
    onMount(() => {
        const SCROLL_THRESHOLD = 200;
        const HYSTERESIS = 50;
        let collapsed = false;
        let ticking = false;

        const update = () => {
            const y = window.scrollY || 0;
            isScrolled = y > 8;

            if (y > SCROLL_THRESHOLD && !collapsed) {
                collapsed = true;
                isCollapsed = true;
            } else if (y < (SCROLL_THRESHOLD - HYSTERESIS) && collapsed) {
                collapsed = false;
                isCollapsed = false;
            }

            ticking = false;
        };

        const onScroll = () => {
            if (!ticking) {
                requestAnimationFrame(update);
                ticking = true;
            }
        };

        update();
        window.addEventListener('scroll', onScroll, { passive: true });

        // Load categories for header navigation
        (async () => {
            try {
                const res = await api.getCategoriesTree();
                if (res?.success && Array.isArray(res.data)) {
                    const top = res.data.filter(c => !c.parent_id || c.parent_id === 0);
                    navCategories = (top.length ? top : res.data).slice(0, 14);
                } else if (res?.success && res?.data?.categories && Array.isArray(res.data.categories)) {
                    navCategories = res.data.categories.slice(0, 14);
                }
            } catch (e) {
                console.error('Failed to load categories', e);
            }
        })();

        return () => {
            window.removeEventListener('scroll', onScroll);
        };
    });

</script>

{#if $page.url.pathname.startsWith('/admin')}
    <!-- Admin has its own layout, just render slot -->
    <slot />
{:else}
<div class="mp-site">
    <!-- ========== HEADER ========== -->
    <header class="mp-header-wrap" class:is-scrolled={isScrolled} class:is-collapsed={isCollapsed}>
        
        <!-- Main Header Row -->
        <div class="mp-header">
            <div class="mp-header__container">
                
                <!-- Mobile Menu Button -->
                <button class="mp-mobile-menu-btn" on:click={toggleMobileMenu} aria-label="Menu">
                    <span class="mp-hamburger" class:is-active={mobileMenuOpen}>
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </button>
                
                <!-- Logo -->
                <a href="/" class="mp-logo">
                    <span class="mp-logo__text">megaprice</span>
                </a>
                
                <!-- Search Form (Desktop) -->
                <form class="mp-search mp-search--desktop" on:submit={handleSearch}>
