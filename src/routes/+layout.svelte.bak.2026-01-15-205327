                        <a
                            href={"/kategoria/" + (cat.slug ?? cat.url_slug ?? cat.id)}
                            class="mp-catnav__item"
                            class:is-active={$page.url.pathname === ("/kategoria/" + (cat.slug ?? cat.url_slug ?? cat.id))}
                        >
                            {cat.name ?? cat.title ?? cat.slug}
                        </a>
                    {/each}
                </div>
            </div>
        </nav>
        {/if}

        <!-- Mobile Search Bar (expandable) -->
        {#if mobileSearchOpen}
